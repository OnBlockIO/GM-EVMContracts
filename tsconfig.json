{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "hardhat.config.ts",
    "utils/chai-setup.ts",
    "./scripts",
    "./deploy",
    "./test",
    "typechain/**/*"
  ]
}
